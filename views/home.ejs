<form action="/" method="GET">
    <label for="title">Title</label>
    <input type="text" name="title" id="title">
    <input type="submit" value="Get me a classic!">
</form>

<% if (movies) {%> 
    <ul>
        <% movies.forEach(film=> { %>
         <li>
            <%= film.Title %>
        </li>
        <% }) %>
    </ul>
<%} else {%> 
    <p>No movies of that title were found</p>
<% } %> 
